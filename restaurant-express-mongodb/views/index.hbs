<div class="container mt-5">
    <!-- search bar -->
    <div class="container search-bar">
        <div class="search-bar-outer">
            <div class="search-bar-inner">
                <form action="/search">
                    <h4 class="mb-2">尋找餐廳：</h4>
                    <div class="input-group">
                        <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                            value="{{ keyword }}" aria-label="Restaurant Name..." aria-describedby="search-button">
                        <div class="input-group-append">
                            <button class="btn btn-major" type="submit" id="search-button"><i
                                    class="fas fa-search"></i></button>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <select class="form-control" name="sortby" id="sortby" onchange="this.form.submit()">
                            <option value="1" {{#if sortBy.isNameAsec}} selected{{/if}}>A > Z</option>
                            <option value="2" {{#if sortBy.isNameDsec}} selected{{/if}}>Z > A</option>
                            <option value="3" {{#if sortBy.isCategory}} selected{{/if}}>類別</option>
                            <option value="4" {{#if sortBy.isLocation}} selected{{/if}}>地區</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- restaurant list -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="card-columns">
                    {{#each restaurants}}
                    <a href="/restaurant/{{ this._id }}" class="text-secondary">
                        <div class="card mb-3">
                            <img class="card-img-top" src={{ this.image }} alt={{ this.name }}>
                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">{{ this.name }}</h6>
                                <div class="restaurant-category mb-1">
                                    <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                                </div>
                                <span class="badge badge-pill badge-danger font-weight-normal">
                                    {{ this.rating }}
                                    <i class="fas fa-star fa-xs"></i>
                                </span>
                                <div class="d-flex flex-row-reverse">
                                    <li class="mt-2" style="list-style-type: none;">
                                        <a class="btn btn-primary p-1" href="/restaurant/{{ this._id }}">Detail</a>
                                        <a class="btn btn-primary p-1" href="/restaurant/{{ this._id }}/edit">Edit</a>
                                        <form action="./restaurant/{{ this._id }}?_method=DELETE" method="POST"
                                            style="display: inline;">
                                            <button class="btn btn-danger p-1" type="submit">Delete</button>
                                        </form>
                                    </li>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>